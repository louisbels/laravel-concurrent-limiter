{
    "name": "largerio/laravel-concurrent-limiter",
    "description": "LaravelConcurrentLimiter is a lightweight Laravel middleware that limits concurrent requests per user (or IP). It delays requests until a slot is available or returns an error after a maximum wait time, protecting your app from resource exhaustion and ensuring fair usage under high load.",
    "keywords": [
        "largerio",
        "laravel",
        "laravel-concurrent-limiter",
        "concurrent",
        "rate-limiting",
        "middleware"
    ],
    "homepage": "https://github.com/largerio/laravel-concurrent-limiter",
    "license": "MIT",
    "authors": [
        {
            "name": "Louis",
            "email": "louis@larger.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "8.3.*|8.4.*",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^9.0.0||^10.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Largerio\\LaravelConcurrentLimiter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Largerio\\LaravelConcurrentLimiter\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Largerio\\LaravelConcurrentLimiter\\LaravelConcurrentLimiterServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
